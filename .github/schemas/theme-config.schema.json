{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSPT Theme Configuration",
  "description": "Configuration file for JSPT themes",
  "type": "object",
  "required": [
    "name",
    "display_name",
    "description",
    "author",
    "github",
    "homepage",
    "version",
    "license",
    "theme_url",
    "released_on",
    "updated_on",
    "categories"
  ],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique theme identifier (lowercase, hyphens allowed)"
    },
    "display_name": {
      "type": "string",
      "minLength": 1,
      "description": "User-friendly theme name"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 200,
      "description": "Brief description of the theme"
    },
    "author": {
      "type": "string",
      "minLength": 1,
      "description": "Theme author name or username"
    },
    "github": {
      "type": "string",
      "pattern": "^https://github\\.com/.+",
      "description": "GitHub repository URL"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "Theme homepage or documentation URL"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+",
      "description": "Semantic version number (e.g., 1.0.0)"
    },
    "license": {
      "type": "string",
      "minLength": 1,
      "description": "License identifier (e.g., MIT, Apache-2.0)"
    },
    "theme_url": {
      "type": "string",
      "format": "uri",
      "pattern": "\\.css$",
      "description": "Direct URL to the CSS file"
    },
    "released_on": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Initial release date (YYYY-MM-DD)"
    },
    "updated_on": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Last update date (YYYY-MM-DD)"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "dark",
          "light",
          "minimal",
          "colorful",
          "neon",
          "high-contrast",
          "retro",
          "modern",
          "gradient",
          "monochrome"
        ]
      },
      "minItems": 1,
      "uniqueItems": true,
      "description": "Array of category tags"
    }
  },
  "additionalProperties": false
}